{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "target": "es6",
      "lib": ["es2020"],
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "alwaysStrict": true,
      "noImplicitReturns": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "declaration": true
    },
    "include": [
      "./src/**/*",
      "./.eslintrc.js",
    ],
  }